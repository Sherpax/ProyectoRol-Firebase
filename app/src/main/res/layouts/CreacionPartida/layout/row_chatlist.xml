<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardChatList"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:elevation="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nombreUserChatList"
                android:text="Nombre usuario"
                android:layout_margin="9dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="2"
                android:layout_width="wrap_content"
                android:maxWidth="230dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/estadoDesconectado"
                android:visibility="gone"
                android:layout_margin="11dp"
                android:src="@drawable/ic_estadodesconectado"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>

            <TextView
                android:id="@+id/txt_desconectado"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:id="@+id/estadoConectado"
                android:visibility="gone"
                android:layout_margin="11dp"
                android:src="@drawable/ic_estadoconectado"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>

            <TextView
                android:id="@+id/txt_conectado"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>