<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PartidasFragment">


    <RelativeLayout
        android:id="@+id/linGrupos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listPartidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <ImageView
            android:id="@+id/iconTipoPartida"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone"
            android:layout_alignRight="@+id/listPartidas"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_partidaprivada">

        </ImageView>

    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botCrearGrupo"
        android:layout_width="wrap_content"
        android:layout_below="@id/linGrupos"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="7dp"
        android:backgroundTint="@color/green"
        android:src="@drawable/ic_add"
        android:layout_height="match_parent">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>



</FrameLayout>